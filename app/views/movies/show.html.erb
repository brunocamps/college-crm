<div class="card shadow">
  <div class="card-header">
    <h4>
      Movie
    </h4>
  </div>
  <div class="card-body">
  
    <b>Name:</b>
    <%= @movie.name %>
    <br>
  
    <b>Duration:</b>
    <%= @movie.duration %>
    <br>
  
    <b>User:</b>
    <%= @movie.user %>
    <br>
  
    <b>Classroom:</b>
    <%= @movie.classroom %>
    <br>
  
  </div>
  <div class="card-footer">
    <%= link_to 'Edit', edit_movie_path(@movie), class: 'btn btn-sm btn-warning' %>
    <%= link_to 'Destroy', @movie, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
  </div>
</div>
