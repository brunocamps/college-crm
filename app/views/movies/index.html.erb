<h3>
  <div class="text-center">
    Movies
    <div class="badge badge-info">
      <%= @movies.count %>
    </div>
    <%= link_to "New movie", new_movie_path, class: 'btn btn-primary' %>
  </div>
</h3>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm table-light shadow">
    <thead>
      <tr>
        <th>Id</th>
    	  
        <th>Name</th>
        
        <th>Duration</th>
        
        <th>User</th>
        
        <th>Classroom</th>
        
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <%= content_tag :tr, id: dom_id(movie), class: dom_class(movie) do %>
          <td><%= link_to movie.id, movie %></td>
          
            <td><%= movie.name %></td>
          
            <td><%= movie.duration %></td>
          
            <td><%= movie.user %></td>
          
            <td><%= movie.classroom %></td>
          
          <td>
            <%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-sm btn-warning' %>
            <%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
